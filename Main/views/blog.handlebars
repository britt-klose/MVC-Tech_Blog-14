<script>
  var blog_id=JSON.stringify({{id}});
</script>

<div class ="blog-card">
  <div class="blog-card-header">
    <h4 class="card-title">
       {{title}}
    </h4>
  </div>
  <div class="card-body">
      <h6>Created by {{user.name}}
      on {{format_date date_created}}
    </h6>
    <p> 
      {{description}}
    </p>
  </div> 
</div>
  <br>
  <br>
  <h5>Comments</h5>
  {{#each comments as |comment|}}
      <h6>{{comment.user.name}}</h6>
      <h6>{{format_date comment.date_created}}</h6>
      <p>{{comment.description}}</p>  
  {{/each}}
  <br>
<div>
  <h4>
    Add Comment:
  </h4>
    <form class="form new-comment-form">
      <div class="form-group">
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>      
    </form>
</div>

<script src="/js/blog.js"></script>

